            //       "opacity" : "0.8"})
            // .html("<center><font size=5>Now Loading...<span id=loadno></span></font><img src=" + LOADING_IMAGE + "></center>");

        // ロゴ
        $("#bord").append(
            $("<img />")
                .attr("src",logoUrl)
                .css({
                    "position" : "absolute",
                    "top":0,
                    "left":LEFT_MARGIN,
                    "width":200,
